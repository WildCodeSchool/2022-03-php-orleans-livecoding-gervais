{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}
	| Contactez nous
{% endblock %}

{% block content %}
	<main class="container-fluid">
		<h1>Contact</h1>
		<ul>
			{% for error in errors %}
				<li>{{error}}</li>
			{% endfor %}
		</ul>
		<form method="post" novalidate>
			<label class="form-label" for="name">Nom</label>
			<input class="form-control" type="text" value="{{ contact.name }}" name="name" id="name" placeholder="Bilbo Baggins" required>

			<label class="form-label" for="email">Email</label>
			<input class="form-control" type="email" value="{{ contact.email }}" name="email" id="email" placeholder="bilbo.baggins.me" required>

			<label class="form-label" for="message">Message</label>
			<textarea class="form-control" name="message" id="message" required placeholder="Je souhaite vous contacter pour une aventure">{{ contact.message }}</textarea>

			<button class="btn btn-primary">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewbox="0 0 16 16">
					<path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
				</svg>
				Envoyer
			</button>
		</form>

	</main>
{% endblock %}
